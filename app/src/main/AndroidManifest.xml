<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xqq.fm">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/theme"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".account.view.AccountActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.LoginAgainActivity" />
        <activity android:name=".category.view.CategoryActivity" />
        <activity android:name=".transfer.view.AddCardActivity" />
        <activity android:name=".account.view.CalendarActivity" />
        <activity android:name=".budget.BudgetSettingActivity" />
        <activity android:name=".search.view.SearchActivity" />
        <activity
            android:name=".datamanagement.FileManageActivity"
            android:theme="@style/AlertDialog.AppCompat.Light" />
    </application>

</manifest>